<form action="<%= cats_url %>" method="post">
  <label>
  Name:
  <input type="text" name="cat[name]" value="">
  </label>
  <br>
  <br>
  <label>
  Birth Date:
  <input type="date" name="cat[birth_date]" value="">
  </label>
  <br>
  <br>
  <label>
  Sex:
  <input type="radio" name="cat[sex]" value="M">M
  <input type="radio" name="cat[sex]" value="F">F
  </label>
  <br>
  <br>
  <label>
  Color:
  <select name="cat[color]">
    <option disabled selected >-- Please select color --</option>
    <option value="Black">Black</option>
    <option value="White">White</option>
    <option value="Spotted">Spotted</option>
    <option value="Yellow">Yellow</option>
    <option value="Tabby">Tabby</option>
    <option value="Brown">Brown</option>
    <option value="Grey">Grey</option>
    <option value="Rainbow">Rainbow</option>
  </select>

  </label>
  <br>
  <br>
  <label>
  Description:
  <br>
  <textarea rows = "4" cols = "50" name = "cat[description]">
  </textarea>
  </label>
  <br>
  <br>

  <input type="submit" name="" value="Build a cat!">

</form>
