<% if action == :new %>
  <% action_url = cats_url %>
  <% submit_value = "Build a Cat!" %>
<% elsif action == :edit %>
  <% action_url = cat_url(@cat) %>
  <% submit_value = "Fix a Cat!" %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <label>
  Name:
  <input type="text" name="cat[name]" value="<%= cat.name %>">
  </label>
  <br>
  <br>
  <label>
  Birth Date:
  <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
  </label>
  <br>
  <br>
  <label>
  Sex:
  <% if cat.sex == "M" %>
  <input type="radio" name="cat[sex]" value="M" checked>M
  <input type="radio" name="cat[sex]" value="F">F
  <% else %>
  <input type="radio" name="cat[sex]" value="M">M
  <input type="radio" name="cat[sex]" value="F" checked>F
  <% end %>
  </label>
  <br>
  <br>
  <label>
  Color:

  <select name="cat[color]">
    <% Cat::COLORS.each do |color| %>
     <% if cat.color == color %>
     <option selected value="<%= color %>"><%= color %></option>
     <% else %>
     <option value="<%= color %>"><%= color %></option>
     <% end %>
    <% end %>
  </select>

  </label>
  <br>
  <br>
  <label>
  Description:
  <br>
  <textarea rows = "4" cols = "50" name = "cat[description]"><%= cat.description %></textarea>
  </label>
  <br>
  <br>

  <input type="submit" name="" value="<%= submit_value %>">

</form>
